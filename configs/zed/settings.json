// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 20.0,
  "buffer_font_family": "Iosevka Term",
  // "buffer_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "JetBrains New Dark"
  },
  // "lsp_highlight_debounce": 9999999999,
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#00000000",
    "editor.document_highlight.write_background": "#00000000"
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          // "./bin/golangci-kube-api-linter",
          "golangci-lint",
          "run",
          "--enable-all",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "file_types": {
    "HTML": ["*.html", "*.tmpl"]
  }
  // "language_overrides": {
  //   "Python": {
  //     "format_on_save": {
  //       "external": {
  //         "command": "ruff",
  //         "arguments": [
  //           "check",
  //           "--exit-zero",
  //           "--fix",
  //           "--stdin-filename",
  //           "{buffer_path}",
  //           "-"
  //         ]
  //       }
  //     }
  //   }
  // }
}
