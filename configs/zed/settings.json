// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "outline_panel": {
    "dock": "right"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "o3-mini"
    },
    "version": "2"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "vim_mode": true,
  "ui_font_size": 20,
  "buffer_font_size": 19.0,
  "preferred_line_length": 65,
  "soft_wrap": "preferred_line_length",
  // "buffer_font_family": "Iosevka Nerd Font Mono",
  "buffer_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "JetBrains New Dark"
  },
  // "lsp_highlight_debounce": 9999999999,
  "experimental.theme_overrides": {
    // "editor.document_highlight.read_background": "#00000000",
    // "editor.document_highlight.write_background": "#00000000"
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--enable-all",
          "--disable",
          "lll",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    }
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "Go": {
      "show_edit_predictions": true,
      "language_servers": ["gopls", "golangci-lint"]
    }
  }
}
